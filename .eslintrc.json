{
  "root": true,
  "extends": "eslint:recommended",
  "parserOptions": {
    "parser": "babel-eslint",
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "indent": ["error", 2],
    "no-console": "off",
    "comma-dangle": ["error", "always-multiline"],
    "brace-style": ["error", "1tbs", { "allowSingleLine": true }],
    "semi": ["error", "never", { "beforeStatementContinuationChars": "always" }]
  }
}
